<UserControl x:Class="WubiMaster.Controls.ColorSchemeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:com="clr-namespace:WubiMaster.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="color_scheme_control"
             d:Background="{DynamicResource bg-100}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <com:Bool2Orientation x:Key="Bool2Orientation" />
        <BooleanToVisibilityConverter x:Key="Bool2Visibility" />

        <Style TargetType="{x:Type TabControl}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Top" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid x:Name="templateRoot"
                              ClipToBounds="True"
                              KeyboardNavigation.TabNavigation="Local"
                              SnapsToDevicePixels="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="ColumnDefinition0" />
                                <ColumnDefinition x:Name="ColumnDefinition1" Width="0" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="RowDefinition0" Height="Auto" />
                                <RowDefinition x:Name="RowDefinition1" Height="*" />
                            </Grid.RowDefinitions>

                            <TabPanel Name="HeaderPanel"
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                      Panel.ZIndex="1"
                                      Background="Transparent"
                                      IsItemsHost="True"
                                      KeyboardNavigation.TabIndex="1" />

                            <Border Name="ContentPanel"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    KeyboardNavigation.DirectionalNavigation="Contained"
                                    KeyboardNavigation.TabIndex="2"
                                    KeyboardNavigation.TabNavigation="Local">
                                <ContentPresenter Name="PART_SelectedContentHost"
                                                  Margin="0"
                                                  Content="{TemplateBinding SelectedContent}"
                                                  ContentSource="SelectedContent"
                                                  ContentStringFormat="{TemplateBinding SelectedContentStringFormat}"
                                                  ContentTemplate="{TemplateBinding SelectedContentTemplate}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="TabStripPlacement" Value="Bottom">
                                <Setter TargetName="HeaderPanel" Property="Grid.Row" Value="1" />
                                <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                <Setter TargetName="RowDefinition1" Property="Height" Value="Auto" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Left">
                                <Setter TargetName="HeaderPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="HeaderPanel" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ContentPanel" Property="Grid.Column" Value="1" />
                                <Setter TargetName="ColumnDefinition0" Property="Width" Value="Auto" />
                                <Setter TargetName="ColumnDefinition1" Property="Width" Value="*" />
                                <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                <Setter TargetName="RowDefinition1" Property="Height" Value="0" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Right">
                                <Setter TargetName="HeaderPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0" />
                                <Setter TargetName="HeaderPanel" Property="Grid.Column" Value="1" />
                                <Setter TargetName="ContentPanel" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ColumnDefinition0" Property="Width" Value="*" />
                                <Setter TargetName="ColumnDefinition1" Property="Width" Value="Auto" />
                                <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                <Setter TargetName="RowDefinition1" Property="Height" Value="0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="templateRoot" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Foreground" Value="{DynamicResource text-100}" />
            <Setter Property="MinWidth" Value="50" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid x:Name="templateRoot"
                              Margin="0,0,20,0"
                              Background="Transparent"
                              SnapsToDevicePixels="True">
                            <Border Name="Border"
                                    Margin="{TemplateBinding Margin}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="2,12,0,0">

                                <Grid>
                                    <ContentPresenter x:Name="ContentSite"
                                                      Width="0"
                                                      Height="0"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True" />
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TabControl Grid.Row="1">
            <!--标准纵向外观样式-->
            <TabItem IsEnabled="False" IsSelected="{Binding ElementName=color_scheme_control, Path=Vertical, Mode=OneWay}">
                <Grid TextBlock.Foreground="{Binding ElementName=color_scheme_control, Path=TextColor}">
                    <Border Width="180"
                            Height="130"
                            Background="{Binding ElementName=color_scheme_control, Path=BackColor}"
                            BorderBrush="{Binding ElementName=color_scheme_control, Path=BorderColor}"
                            BorderThickness="{Binding ElementName=color_scheme_control, Path=BorderWidth}"
                            CornerRadius="{Binding ElementName=color_scheme_control, Path=CornerRadius}">
                        <Grid Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Border Width="40"
                                        Height="24"
                                        Margin="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="{Binding ElementName=color_scheme_control, Path=HilitedBackColor}"
                                        CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=HilitedTextColor}"
                                               Text="ksvt" />
                                </Border>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.Resources>
                                    <Style x:Key="label_style" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="Margin" Value="5,0" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>

                                    <Style x:Key="text_style" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                        <Setter Property="Margin" Value="0" />
                                    </Style>

                                    <Style x:Key="spelling_style" TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="FontFamily" Value="../Fonts/#黑体字根" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="Margin" Value="5,0,0,0" />
                                    </Style>
                                </Grid.Resources>

                                <Border Grid.ColumnSpan="4"
                                        Margin="2"
                                        Background="{Binding ElementName=color_scheme_control, Path=HilitedCandidateBackColor}"
                                        CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}" />

                                <TextBlock Grid.Column="1"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=HilitedLabelColor}"
                                           Style="{StaticResource label_style}"
                                           Text="㊀" />

                                <TextBlock Grid.Row="0"
                                           Grid.Column="2"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=HilitedCandidateTextColor}"
                                           Style="{StaticResource text_style}"
                                           Text="中书君" />

                                <TextBlock Grid.Row="0"
                                           Grid.Column="3"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=HilitedCommentTextColor}"
                                           Style="{StaticResource spelling_style}"
                                           Text="〈  〉" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=LabelColor}"
                                           Style="{StaticResource label_style}"
                                           Text="㊁" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="2"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=CandidateTextColor}"
                                           Style="{StaticResource text_style}"
                                           Text="五笔斋" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="3"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=CommentTextColor}"
                                           Style="{StaticResource spelling_style}"
                                           Text="〈  〉" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=LabelColor}"
                                           Style="{StaticResource label_style}"
                                           Text="㊂" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="2"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=CandidateTextColor}"
                                           Style="{StaticResource text_style}"
                                           Text="空山明月" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="3"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=CommentTextColor}"
                                           Style="{StaticResource spelling_style}"
                                           Text="〈  〉" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <!--标准横向外观样式-->
            <TabItem IsEnabled="False" IsSelected="{Binding ElementName=color_scheme_control, Path=Horizontal, Mode=OneWay}">
                <Grid TextBlock.Foreground="{Binding ElementName=color_scheme_control, Path=TextColor}">
                    <Border Width="Auto"
                            Height="Auto"
                            Background="{Binding ElementName=color_scheme_control, Path=BackColor}"
                            BorderBrush="{Binding ElementName=color_scheme_control, Path=BorderColor}"
                            BorderThickness="{Binding ElementName=color_scheme_control, Path=BorderWidth}"
                            CornerRadius="{Binding ElementName=color_scheme_control, Path=CornerRadius}">
                        <Grid Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Border Width="40"
                                        Height="24"
                                        Margin="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="{Binding ElementName=color_scheme_control, Path=HilitedBackColor}"
                                        CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=HilitedTextColor}"
                                               Text="ksvt" />
                                </Border>
                            </Grid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style x:Key="label_style" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="Margin" Value="5,0" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>

                                    <Style x:Key="text_style" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                        <Setter Property="Margin" Value="0" />
                                    </Style>

                                    <Style x:Key="spelling_style" TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="FontFamily" Value="../Fonts/#黑体字根" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="Margin" Value="5,0,0,0" />
                                    </Style>
                                </StackPanel.Resources>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.ColumnSpan="4"
                                            Margin="5"
                                            Background="{Binding ElementName=color_scheme_control, Path=HilitedCandidateBackColor}"
                                            CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}" />

                                    <TextBlock Grid.Column="1"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=HilitedLabelColor}"
                                               Style="{StaticResource label_style}"
                                               Text="㊀" />

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="2"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=HilitedCandidateTextColor}"
                                               Style="{StaticResource text_style}"
                                               Text="中书君" />

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="3"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=HilitedCommentTextColor}"
                                               Style="{StaticResource spelling_style}"
                                               Text="〈  〉" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.ColumnSpan="4"
                                            Margin="2"
                                            Background="{Binding ElementName=color_scheme_control, Path=CandidateBackColor}"
                                            CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}" />

                                    <TextBlock Grid.Column="1"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=LabelColor}"
                                               Style="{StaticResource label_style}"
                                               Text="㊁" />

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="2"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=CandidateTextColor}"
                                               Style="{StaticResource text_style}"
                                               Text="五笔斋" />

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="3"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=CommentTextColor}"
                                               Style="{StaticResource spelling_style}"
                                               Text="〈  〉" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.ColumnSpan="4"
                                            Margin="2"
                                            Background="{Binding ElementName=color_scheme_control, Path=CandidateBackColor}"
                                            CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}" />

                                    <TextBlock Grid.Column="1"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=LabelColor}"
                                               Style="{StaticResource label_style}"
                                               Text="㊂" />

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="2"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=CandidateTextColor}"
                                               Style="{StaticResource text_style}"
                                               Text="空山明月" />

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="3"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=CommentTextColor}"
                                               Style="{StaticResource spelling_style}"
                                               Text="〈  〉" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <!--文本垂直模式-->
            <TabItem IsEnabled="False" IsSelected="{Binding ElementName=color_scheme_control, Path=TextVertical, Mode=OneWay}">
                <Grid TextBlock.Foreground="{Binding ElementName=color_scheme_control, Path=TextColor}">
                    <Border Width="110"
                            Height="160"
                            Background="{Binding ElementName=color_scheme_control, Path=BackColor}"
                            BorderBrush="{Binding ElementName=color_scheme_control, Path=BorderColor}"
                            BorderThickness="{Binding ElementName=color_scheme_control, Path=BorderWidth}"
                            CornerRadius="{Binding ElementName=color_scheme_control, Path=CornerRadius}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Grid>
                                <Border Height="60"
                                        Margin="3"
                                        VerticalAlignment="Top"
                                        Background="{Binding ElementName=color_scheme_control, Path=HilitedBackColor}"
                                        CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}">
                                    <TextBlock Width="10"
                                               Margin="2,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{Binding ElementName=color_scheme_control, Path=HilitedTextColor}"
                                               Text="ksvt"
                                               TextWrapping="Wrap" />
                                </Border>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border Grid.RowSpan="4"
                                        Grid.Column="0"
                                        Margin="2"
                                        Background="{Binding ElementName=color_scheme_control, Path=HilitedCandidateBackColor}"
                                        CornerRadius="{Binding ElementName=color_scheme_control, Path=RoundCorner}" />

                                <TextBlock Grid.Row="1"
                                           Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                           Margin="0,4,0,0"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=HilitedLabelColor}"
                                           Text="㊀"
                                           TextWrapping="Wrap" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                           Margin="0,4,0,0"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=LabelColor}"
                                           Text="㊁"
                                           TextWrapping="Wrap" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="2"
                                           Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                           Margin="0,4,0,0"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=LabelColor}"
                                           Text="㊂"
                                           TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2"
                                           Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                           FontSize="14"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=HilitedCandidateTextColor}"
                                           Text="中书君"
                                           TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                           FontSize="14"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=CandidateTextColor}"
                                           Text="五笔斋"
                                           TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="2"
                                           Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                           FontSize="14"
                                           Foreground="{Binding ElementName=color_scheme_control, Path=CandidateTextColor}"
                                           Text="空山明月"
                                           TextWrapping="Wrap" />

                                <StackPanel Grid.Row="3" TextBlock.Foreground="{Binding ElementName=color_scheme_control, Path=HilitedCommentTextColor}">
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               RenderTransformOrigin="0.5,0.5"
                                               Text="〈"
                                               TextWrapping="Wrap">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               Margin="0,-5,0,0"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               Text=""
                                               TextWrapping="Wrap" />
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               RenderTransformOrigin="0.5,0.5"
                                               Text="〉"
                                               TextWrapping="Wrap">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Row="3"
                                            Grid.Column="1"
                                            TextBlock.Foreground="{Binding ElementName=color_scheme_control, Path=CommentTextColor}">
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               RenderTransformOrigin="0.5,0.5"
                                               Text="〈"
                                               TextWrapping="Wrap">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               Margin="0,-5,0,0"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               Text=""
                                               TextWrapping="Wrap" />
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               RenderTransformOrigin="0.5,0.5"
                                               Text="〉"
                                               TextWrapping="Wrap">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Row="3"
                                            Grid.Column="2"
                                            TextBlock.Foreground="{Binding ElementName=color_scheme_control, Path=CommentTextColor}">
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               RenderTransformOrigin="0.5,0.5"
                                               Text="〈"
                                               TextWrapping="Wrap">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               Margin="0,-5,0,0"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               Text=""
                                               TextWrapping="Wrap" />
                                    <TextBlock Width="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"
                                               FontFamily="../Fonts/#黑体字根"
                                               FontSize="10"
                                               RenderTransformOrigin="0.5,0.5"
                                               Text="〉"
                                               TextWrapping="Wrap">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="90" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>